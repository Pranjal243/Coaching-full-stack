<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <style>
        table, th, td {
          border:1px solid black;
        }
    </style>
    <header>
        <%- include('../partials/header',{sessionId:sessionId}); %>
    </header>

    <main>
        <!--? slider Area Start-->
        <section class="slider-area slider-area2">
            <div class="slider-active">
                <!-- Single Slider -->
                <div class="single-slider slider-height2">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-8 col-lg-11 col-md-12">
                                <div class="hero__caption hero__caption2">
                                    <h1 data-animation="bounceIn" data-delay="0.2s">Study Material</h1>
                                    <!-- breadcrumb Start-->
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item"><a href="resource">Resources</a></li> 
                                        </ol>
                                    </nav>
                                    <!-- breadcrumb End -->
                                    <%if (sessionId > 0) {%>
                                        <div class="container">
                                            <%if (resources.length > 0) {%>
                                                <div class="row">
                                                    <table style="width:100%">
                                                        <tr>
                                                            <th>ID</th><th>Course</th><th>Description</th><th>View</th>
                                                        </tr>
                                                        <%for (let resource of resources) 
                                                        {%>    
                                                            <tr>
                                                            <% if(sessionId==1) {%>
                                                                <td><%= resource.resource_id%></td>
                                                                <td><%= resource.course%></td>
                                                                <td><%= resource.description%></td>
                                                                <td><a href="<%=resource.link%>" target="_blank" onMouseOver="this.style.color='#0F0'"
                                                                    onMouseOut="this.style.color='#00F'" style="color: white;">Click</a></td>
                                                            <%} else if(sessionId>1 && resource.course==category) {%>
                                                                <td><%= resource.resource_id%></td>
                                                                <td><%= resource.course%></td>
                                                                <td><%= resource.standard%></td>
                                                                <td class="desc"><%= resource.desc%></td>
                                                                <td><a href="<%=resource.url%>" target="_blank" onMouseOver="this.style.color='#0F0'"
                                                                    onMouseOut="this.style.color='#00F'" style="color: white;">Click</a></td>
                                                            <%} %> 
                                                            </tr>
                                                        <%}%>
                                                    </table>
                                        
                                        
                                                    <div class="container mt-4">
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination justify-content-center">
                                                                <% if (hasPreviousPage) { %>
                                                                <li class="page-item">
                                                                    <a class="page-link" href="?page=1" style="color: white;">First</a>
                                                                </li>
                                                                <li class="page-item">
                                                                    <a class="page-link" href="?page=<%= previousPage %>" style="color: white;"><%= previousPage %></a>
                                                                </li>
                                                                <% } %>
                                                                <li class="page-item active">
                                                                    <a class="page-link" href="?page=<%= currentPage %>" style="color: white;"><%= currentPage %></a>
                                                                </li>
                                                                <% if (hasNextPage) { %>
                                                                <li class="page-item">
                                                                    <a class="page-link" href="?page=<%= nextPage %>" style="color: white;"><%= nextPage %></a>
                                                                </li>
                                                                <li class="page-item">
                                                                    <a class="page-link" href="?page=<%= lastPage %>" style="color: white;">Last</a>
                                                                </li>
                                                                <% } %>
                                                            </ul>
                                        
                                                        </nav>
                                                    </div>
                                                </div>
                                                <%} else {%>
                                                <div class="text-center">
                                                    <h5>No Resources found.</h5>
                                                    <div class="mt-4">
                                                        <a href="/" class="btn " style="color: wheat;">Go Home</a>
                                                    </div>
                                                </div>
                                                <%}%>
                                        </div>
                                        <%} else {%>
                                            <div>
                                                <h1>You must enroll to view resources</h1>
                                                <h2>Please login if you have already enrolled</h2>
                                            </div>
                                     <%}%>
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>
            </div>
        </section>
    </main>
    <footer>
     <div class="footer-wrappper footer-bg">
        <%- include('../partials/footer'); %>
      </div>
  </footer> 
  <!-- Scroll Up -->
  <div id="back-top" >
    <a title="Go to Top" href="#"> <i class="fas fa-level-up-alt"></i></a>
</div>

<%- include('../partials/footer-script'); %>

</body>
</html>